{
	"ts-node": {
		"compilerOptions": {
			"module": "node16",
			"target": "es2022"
		}
	},
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"alwaysStrict": true,
		"strictBindCallApply": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"strictNullChecks": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"allowJs": false,
		"checkJs": false,
		"outDir": "build",
		"declaration": true,
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": "./",
		"paths": {
			"@/components/*": [
				"components/*"
			],
			"@/styles/*": [
				"styles/*"
			],
		}
	},
	"rootDirs": [
		"./src"
	],
	"include": [
		"./src/**/*.ts",
		"src/**/*.js"
	],
	"exclude": [
		"node_modules/*"
	]
}